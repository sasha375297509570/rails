<h4 class="text-center">Список отделов</h4>
<div>
	<%= link_to 'Создать отдел',  departament_new_path %>
</div>

<%= will_paginate @departaments %>
<table class="table">
	<tbody>
		<tr>
			<th colspan="3">
				название
			</th>
		</tr>
	<% @departaments.each do |department| %>
		<tr>
			<td>
				<%= department.name %>
			</td>
			<td class="indexTableTd text-right">
				<%= link_to 'Edit',  edit_departament_path(department) %>
			</td>
			<td class="indexTableTd text-right">
				<%= link_to 'Delete', delete_departament_path(department), :method=>:delete %>
			</td>
		</tr>
	<% end %>
	</tbody>
</table>
<%= will_paginate @departaments %>