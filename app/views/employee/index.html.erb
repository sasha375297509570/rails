<h4 class="text-center">Список работников</h4>
<div>
	<%= link_to 'Создать работника',  employee_new_path %>
</div>

<%= will_paginate @employees %>
<table class="table">
	<tbody>
		<tr>
			<th>
				имя
			</th>
			<th colspan="3">
				отдел
			</th>
		</tr>
	<% @employees.each do |employee| %>
		<tr>
			<td>
				<%= employee.name %>
			</td>
			<td>
				<%= employee.departament.name %>
			</td>
			<td class="indexTableTd text-right">
				<%= link_to 'Edit',  edit_employee_path(employee) %>
			</td>
			<td class="indexTableTd text-right">
				<%= link_to 'Delete', delete_employee_path(employee), :method=>:delete %>
			</td>
		</tr>
	<% end %>
	</tbody>
</table>
<%= will_paginate @employees %>
